{
  "name": "advent-of-code-2017-reasonml",
  "version": "1.0.0",
  "keywords": ["BuckleScript"],
  "author": "Jonas Kello <jonas.kello@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "bs-platform": "^2.1.0",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.2"
  },
  "scripts": {
    "build": "bsb -make-world",
    "clean": "bsb -clean-world",
    "start:bsb": "bsb -make-world -w",
    "start:node:day1": "nodemon ./lib/js/src/day1/day1.bs.js",
    "start:node:day2_1": "nodemon ./lib/js/src/day2/day2_1.bs.js",
    "start:node:day2_2": "nodemon ./lib/js/src/day2/day2_2.bs.js",
    "start:day1": "run-p -l start:bsb start:node:day1",
    "start:day2_1": "run-p -l start:bsb start:node:day2_1",
    "start:day2_2": "run-p -l start:bsb start:node:day2_2"
  }
}
